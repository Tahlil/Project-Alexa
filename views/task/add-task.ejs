<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/task.css">
</head>

<body>
  <%- include('../includes/navigation.ejs') %>

  <div class="container" style="margin-top: 20px">
    <form action="/add-task-to-file" method="POST">
      <div class="form-group">
        <label for="name">Title</label>
        <input type="name" name="title" class="form-control" id="name" placeholder="Title">
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" name="description" rows="3" id="description" placeholder="Description"></textarea>
      </div>

      <button type="submit" class="btn btn-primary" id="btn-add-task">Create Task</button>
    </form>
  </div>
  <%- include('../includes/end.ejs') %>